{
  "name": "VideoNote",
  "version": "0.0.1",
  "private": true,
  "main": "./electron/main.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "estart": "electron .",
    "ebuild": "electron-builder",
    "ebuildwin": "electron-builder --win",
    "ebuildwin64": "electron-builder --win --x64",
    "ebuildwin32": "electron-builder --win --ia32",
    "go": "npm run serve && npm run estart",
    "gol": " npm run build && npm run estart"
  },
  "dependencies": {
    "@types/node": "^13.9.1",
    "@types/request-promise-native": "^1.0.17",
    "axios": "^0.21.1",
    "core-js": "^3.6.4",
    "data-uri-to-buffer": "^3.0.0",
    "dplayer": "^1.25.0",
    "element-ui": "^2.13.0",
    "express": "^4.17.1",
    "flowplayer": "^7.2.7",
    "form-data": "3.0.0",
    "html2canvas": "^1.0.0-rc.5",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8",
    "sql.js": "^1.1.0",
    "tui-editor": "^1.4.10",
    "vant": "^2.5.2",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.2",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.5",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.2.0",
    "@vue/cli-plugin-router": "^4.2.0",
    "@vue/cli-plugin-typescript": "^4.3.1",
    "@vue/cli-plugin-vuex": "^4.2.0",
    "@vue/cli-service": "^4.2.0",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-plugin-jsx-v-model": "^2.0.3",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "babel-preset-env": "^1.7.0",
    "electron": "^8.1.0",
    "electron-builder": "^22.4.0",
    "electron-packager": "^14.0.5",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.5.0",
    "typescript": "~3.7.5",
    "video.js": "^7.6.6",
    "vue-template-compiler": "^2.6.11"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "build": {
    "appId": "com.linmilin.learn",
    "mac": {
      "category": "public.app-category.news",
      "icon": "static/icon.png"
    },
    "files": [
      "dist/**/*",
      "static/**/*",
      "electron/**/*",
      "package.json"
    ],
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "VideoNote"
    },
    "directories": {
      "output": "release"
    },
    "dmg": {
      "icon": "static/icon.png",
      "contents": [
        {
          "x": 134,
          "y": 190
        },
        {
          "x": 344,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "VideoNote"
    },
    "win": {
      "icon": "static/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  }
}
